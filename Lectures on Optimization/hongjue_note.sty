\newcommand{\R}{\mathbb{R}}
\newcommand{\myvec}[1]{\boldsymbol{#1}}

\newtheorem[M]{defn}{Definition}[chapter]
\newtheorem[M]{thm}{Theorem}[chapter]
\newtheorem{eg}{e.g.}[section]

\newenvironment{note}[1]{\textbf{{#1}:}}{}
\newenvironment{boxnote}[1]{
    \begin{tcolorbox}[
        colback = white, colframe=black, title = #1
    ]
}{\end{tcolorbox}}
\newenvironment{colorboxnote}[1]{
    \begin{tcolorbox}[
        colback = blue!10, colframe=blue!60!black, title = #1
    ]
}{\end{tcolorbox}}